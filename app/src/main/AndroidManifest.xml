<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="app.mytweetapp">

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name=".main.MyTweetApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity android:name=".activities.Welcome">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--SIGNUP SCREEN-->

        <activity
            android:name="app.mytweetapp.activities.Signup"
            android:label="Signup Page"
            android:screenOrientation="portrait" />


        <!--LOGIN SCREEN-->

        <activity
            android:name="app.mytweetapp.activities.Login"
            android:label="Login Page"
            android:screenOrientation="portrait" />
    </application>

</manifest>